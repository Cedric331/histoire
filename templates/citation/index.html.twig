{% extends('layouts/layout.html.twig') %}

{% block title %}Citation {% endblock %}

{% block body %}
<div class="container z-depth-1 my-5 p-5">

  <!-- Section -->
  <section class="bg-light p-3 mb-5">

    <h3 class="font-weight-bold text-center dark-grey-text pb-2">Citations</h3>
    <p class="lead text-center text-muted pt-2 mb-5">Retrouvez l'ensemble des citations Ã  travers l'histoire</p>
<hr class="w-header my-4">
    <div class="row d-flex justify-content-center">

   {% for citation in citations %}
      <div class="col-md-6 col-xl-4 my-auto">
        <h5 class="font-weight-normal"><a class="dark-grey-text" href="#">{{ citation.personnage.name}}</a></h5>
      </div>
      <div class="col-md-6 my-auto">
        <p class="text-muted my-5 pb-2">"{{ citation.citation}}"</p>
      </div>
      <hr class="w-75 my-2 m-auto">
   {% endfor %}
{{ knp_pagination_render(citations) }}
    </div>
  </section>
</div>
{% endblock %}