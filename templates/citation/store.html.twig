{% extends('layouts/layout.html.twig') %}

{% block title %}Création Citation{% endblock %}

{% block body %}
   <div class="container mt-5 bg-light p-3">
<h2 class="text-center">Création Citation</h2>
<hr class="my-4">
   {{ form_start(form) }}
   <div class="row">
      <div class="col-12 my-2 p-2">
         {{ form_row(form.citation) }}
      </div>
      <div class="col-12 my-2 p-2">
         {{ form_row(form.personnage) }}
      </div>
      <div class="col-5 mt-3">
         <input class="btn btn-outline-primary waves-effect" value="Créer" type="submit">
      </div>
   </div>
   {{ form_end(form) }}

</div>
{% endblock %}
