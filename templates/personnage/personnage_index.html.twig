{% extends "layouts/layout.html.twig" %}

{% block title %}Liste des personnages{% endblock %}

{% block body %}

<div class="container my-5">

  <!-- Section: Block Content -->
  <section>

    <div class="card">
      <div class="card-body">
        <h5 class="text-center font-weight-bold mb-4">Liste des personnages</h5>
        <hr>
        <div class="row">
          <div class="col-12 mb-3 mx-auto">

   {% for personnage in personnages %}
            <div class="media">
              <img class="d-flex mr-3" style="max-height:200px;max-width:200px;" src="{{ asset('images/personnages/' ~ personnage.image)}}" alt="Photo de {{personnage.name}}">
              <div class="media-body">
                <h6 class="mt-1 font-weight-bold"><a href="#!">{{ personnage.name }}</a></h6>
                <p class="text-muted">Année de naissance : {{ personnage.birth }}, Année de mort : {{ personnage.death }}</p>
                <p class="text-muted">Peuple : {{ personnage.people }}</p>
                <p class="text-muted">{{ personnage.history }}</p>
              </div>
              <a href="{{ path('personnage_edit', {'personnage': personnage.id})}}" class="my-2 btn btn-primary">Modifier</a>
            </div>
            <hr>
   {% endfor %}

          </div>
        </div>
        <hr>
      <div class="navigation">
         {{ knp_pagination_render(personnages) }}
      </div>      </div>
    </div>
  </section>
</div>


{% endblock %}